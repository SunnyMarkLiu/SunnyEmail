<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>

	<!-- 把它设置为开发模式，发布时要设置为false -->
	<constant name="struts.devMode" value="true" />

	<!-- 设置浏览器是否缓存静态内容,默认值为true(生产环境下使用),开发阶段最好关闭 -->
	<constant name="struts.serve.static.browserCache" value="false" />

	<!-- 当struts的配置文件修改后,系统是否自动重新加载该文件,默认值为false(生产环境下使用),开发阶段最好打开 -->
	<constant name="struts.configuration.xml.reload" value="true" />

	<!-- 设置是否支持动态方法调用 -->
	<constant name="struts.enable.DynamicMethodInvocation" value="true" />

	<!-- 设置上传文件的最大大小为10485760字节=10M -->
	<constant name="struts.multipart.maxSize" value="10485760" />

	<package name="" namespace="/user" extends="struts-default">
		<action name="user_*" class="userAction" method="{1}">
			<result name="success">/WEB-INF/index.jsp</result>
			<result name="error">/WEB-INF/error.jsp</result>
		</action>
	</package>

	<package name="" namespace="/emailinfo" extends="struts-default">
		<action name="emailinfo_*" class="emailInfoAction" method="{1}">
			<result name="saveEmailInfo">   </result>
		</action>
	</package>

</struts>